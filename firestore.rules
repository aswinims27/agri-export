rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Farmers collection
    match /farmers/{farmerId} {
      allow read, write: if request.auth != null && request.auth.uid == farmerId;
    }
    
    // Market insights - readable by all authenticated users
    match /marketInsights/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only admin writes
    }
    
    // Export recommendations - readable by authenticated users
    match /exportRecommendations/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only admin writes
    }
  }
}